<resources>
    <style name="Widget.UTS_PAPB2.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.UTS_PAPB2.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="AppWidgetTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="AppWidgetLabel" parent="AppWidgetText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppWidgetText" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppWidgetSmallText" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="AppWidgetButton" parent="Base.Widget.AppCompat.Button">

    </style>

